{% import "_includes/forms" as forms %}

{{ forms.lightswitchField({
    label: 'Hide Field',
    instructions: 'When enabled this field will not be visible in the CP.',
    id: 'hidden',
    name: 'hidden',
    on: field['hidden']})
}}

{{ forms.lightswitchField({
    label: 'Visible To Admins',
    instructions: 'When enabled this field will always be visible to Admins.',
    id: 'visibleToAdmins',
    name: 'visibleToAdmins',
    on: field['visibleToAdmins']})
}}

{{ forms.lightswitchField({
    label: 'Allow Admin Edits',
    instructions: 'When enabled this field can be edited by Admins.',
    id: 'adminEdits',
    name: 'adminEdits',
    on: field['adminEdits']})
}}
